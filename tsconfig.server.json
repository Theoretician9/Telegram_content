// tsconfig.server.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "api.ts",
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
