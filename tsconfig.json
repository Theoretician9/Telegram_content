{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    // moduleResolution при CommonJS остаётся default
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true
  },
  "include": ["**/*.ts"]
}
